#include <iostream>
using namespace std;

int main()
{
  float n, factorial = 1;
  cout << "Enter a number to be factorised: \n";
  cin >> n;

  for (int x = 1; x <= n; ++x)
  {
    factorial *= x;
    //factorial = factorial * x
  }

  cout << "Factorial of " << n << " = " << factorial;

  return 0;
}
